{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["flowtype", "jest", "promise"],
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "standard-preact",
    "plugin:flowtype/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "browser": true,
    "jest/globals": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-double"]
  }
}
